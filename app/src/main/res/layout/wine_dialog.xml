<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/brandEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba la marca del vino que agregará"/>

    <EditText
        android:id="@+id/typeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriba el tipo de vino que agregará"/>

    <EditText
        android:id="@+id/yearsEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Escriba los años del vino que agregará"/>

    <Button
        android:id="@+id/dialogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÑADIR y GUARDAR"
        android:layout_gravity="center"/>

</LinearLayout>